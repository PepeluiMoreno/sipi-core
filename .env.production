# sipi-core/.env.production
# Configuracion de produccion - copiar a .env y ajustar valores

# Entorno
ENVIRONMENT=production
DEFINED_SCHEMAS=app,gis
# Dominios
DOMAIN_BASE=europalaica.org
FRONTEND_DOMAIN=sipi.europalaica.org
API_DOMAIN=sipi-api.europalaica.org

# Base de datos
DB_CONTAINER_NAME=sipi-db
DB_USER=sipi
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
DB_NAME=sipi
DB_PORT=5432
DATABASE_URL=postgresql+asyncpg://${DB_USER}:${DB_PASSWORD}@${DB_CONTAINER_NAME}:${DB_PORT}/${DB_NAME}
DATABASE_SCHEMA=sipi

# API Backend
BACKEND_CONTAINER_NAME=sipi-api
API_HOST=0.0.0.0
API_PORT=8040
API_URL=https://${API_DOMAIN}/graphql
VITE_API_URL=https://${API_DOMAIN}/graphql

# Frontend
FRONTEND_CONTAINER_NAME=sipi-frontend
FRONTEND_PORT=3000

# SQLAlchemy
SQLALCHEMY_ECHO=false
POOL_SIZE=20
POOL_MAX_OVERFLOW=10
POOL_TIMEOUT=30

# SSL/TLS (certificado wildcard o certificados individuales)
SSL_CERT_PATH=/etc/letsencrypt/live/${DOMAIN_BASE}/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/${DOMAIN_BASE}/privkey.pem
