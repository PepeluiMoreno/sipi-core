# sipi-core/.env.development
# Configuracion de desarrollo local

# Entorno
ENVIRONMENT=development
DEFINED_SCHEMAS=app

# Base de datos
DATABASE_URL=postgresql+asyncpg://sipi:sipi@localhost:5432/sipi
DATABASE_SCHEMA=sipi

# API GraphQL
API_HOST=0.0.0.0
API_PORT=8040
API_URL=http://localhost:8040/graphql
VITE_API_URL=http://localhost:8040/graphql

# SQLAlchemy
SQLALCHEMY_ECHO=false
POOL_SIZE=20
POOL_MAX_OVERFLOW=10
POOL_TIMEOUT=30
